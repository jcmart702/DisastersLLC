<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet
  version="1.0"
  xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
  xmlns:dyn="http://exslt.org/dynamic"
  extension-element-prefixes="dyn">

  <xsl:output method="text" omit-xml-declaration="yes" indent="no"/>

  <!-- XPath selector passed as param. -->
  <xsl:param name="selector" />

  <xsl:template match="/root">
    <xsl:call-template name="evaluate">
      <xsl:with-param name="text" select="$selector" />
    </xsl:call-template>
  </xsl:template>

  <xsl:template name="evaluate">
    <xsl:param name="text" />
    <xsl:param name="HOME" select="./HOME/node()" />
    <xsl:param name="SITE" select="./SITE/node()"/>

    <xsl:choose>

      <xsl:when test="contains($text, '{')">
        <xsl:value-of select="substring-before($text, '{')" />
        <xsl:variable name="expression" select="substring-before(substring-after($text, '{'), '}')" />
        <xsl:value-of select="dyn:evaluate($expression)" />

        <xsl:call-template name="evaluate">
          <xsl:with-param name="text" select="substring-after($text, concat($expression, '}'))" />
        </xsl:call-template>
      </xsl:when>

      <xsl:otherwise>
        <xsl:value-of select="$text" />
      </xsl:otherwise>
    </xsl:choose>
  </xsl:template>
</xsl:stylesheet>
